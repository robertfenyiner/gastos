# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Configuration - CHANGE IN PRODUCTION
JWT_SECRET=change-this-to-a-very-long-secure-secret-key-at-least-64-characters-long
JWT_EXPIRES_IN=7d

# CORS Configuration (production only)
# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here
EMAIL_FROM=your-email@gmail.com

# Exchange Rate API Configuration (optional)
# Get your API key from https://exchangerate-api.com
EXCHANGE_API_KEY=your-exchangerate-api-key-here

# Application URL (used in emails and redirects)
APP_URL=http://localhost:3000

# Database Configuration
DB_PATH=./expense_tracker.db

# Security Configuration
# Bcrypt salt rounds (12 is recommended, higher = more secure but slower)
BCRYPT_SALT_ROUNDS=12

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging Configuration
LOG_LEVEL=info